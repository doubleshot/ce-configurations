        check process mysql
           with pidfile "/var/run/mysqld/mysqld.pid"
           start program = "/etc/init.d/mysqld start" with timeout 60 seconds
           stop program = "/etc/init.d/mysqld stop"
           if 2 restarts within 3 cycles then timeout
           group kaltura
           depends on mysqld.conf, mysqld

        check file mysqld.conf
            with path /etc/mysqld/conf/mysqld.conf
            # Reload apache if the mysqld.conf file was changed
            if changed checksum
               then exec "/etc/init.d/mysqld reload"

        check file mysqld
            with path /usr/bin/mysqld_safe

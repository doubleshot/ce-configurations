# This installs or removes the Red5 server
install_red5(){
	ln -s $base_dir/bin/red5/red5 /etc/init.d/red5
	chkconfig red5 on
	if ! service red5 start &>> $logfile;then
		printf "Warning: unable to start red5 service\n";
	fi
}

uninstall_red5(){
	if ! service red5 stop &>> $logfile;then
		printf "Error: unable to stop red5 service for removal\n";
		exit 1
	fi
	chkconfig red5 off
	rm -f /etc/init.d/red5
}